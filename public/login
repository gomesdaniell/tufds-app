<body>
<div class="wrap">
  <div class="card">
    <h1>Área dos Filhos</h1>
    <p class="muted">Acesse com seu e-mail e senha.</p>

    <label for="email">E-mail</label>
    <input id="email" type="email" autocomplete="username" placeholder="seunome@exemplo.com">

    <label for="senha">Senha</label>
    <input id="senha" type="password" autocomplete="current-password" placeholder="••••••••">

    <div class="actions">
      <button class="btn" id="btnEntrar">Entrar</button>
    </div>
    <div class="msg" id="msg"></div>
  </div>
</div>

<script>
const msg = document.getElementById('msg');
document.getElementById('btnEntrar').addEventListener('click', async ()=>{
  msg.textContent = ''; msg.className = 'msg';
  const email = document.getElementById('email').value.trim();
  const senha = document.getElementById('senha').value;

  if(!email || !senha){ msg.textContent='Informe e-mail e senha.'; msg.classList.add('erro'); return; }

  try{
    const res = await fetch('/api/auth/login.js', {
      method: 'POST',
      headers: {'Content-Type':'application/json'},
      body: JSON.stringify({ email, senha })
    });
    const data = await res.json().catch(()=> ({}));
    if(!res.ok || !data.ok){
      msg.textContent = data?.message || 'Falha no login.';
      msg.classList.add('erro');
      return;
    }
    // sucesso → vai para o "outro index"
    window.location.href = '/admin/index.html';
  }catch(e){
    msg.textContent = 'Erro inesperado.';
    msg.classList.add('erro');
  }
});
</script>
</body>
